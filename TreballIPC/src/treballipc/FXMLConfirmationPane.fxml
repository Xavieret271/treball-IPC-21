<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="window" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="treballipc.FXMLConfirmationPaneController">
   <children>
      <Label text="S'ha enviat un codi de confirmacio al teu email">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="20.0" />
         </VBox.margin>
         <padding>
            <Insets left="20.0" />
         </padding></Label>
      <Label text="Introdueix-lo aci" textFill="#e7d3af">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
         <padding>
            <Insets left="20.0" />
         </padding></Label>
      <TextField fx:id="confirmationCode" promptText="Codi de Confirmacio">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="30.0" top="20.0" />
         </VBox.margin></TextField>
      <Label fx:id="errorMessage" textFill="RED" />
      <HBox alignment="TOP_RIGHT">
         <children>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmAttempt" text="Confirmar" textFill="#e7d3af">
               <font>
                  <Font name="Times New Roman" size="12.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#cancel" text="Cancellar" textFill="#e7d3af">
               <font>
                  <Font name="Times New Roman" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="passAcces" onMouseEntered="#passShow" onMouseExited="#passHide" text="La contrasenya es:" textFill="ORANGE" visible="false" />
   </children>
   <stylesheets>
      <URL value="@clear.css" />
      <URL value="@dark.css" />
   </stylesheets>
</VBox>
